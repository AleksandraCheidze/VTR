{
  "manifest_version": 3,
  "name": "Video Text Copier (Test)",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": [
    "<all_urls>",
    "https://velvety-piroshki-542402.netlify.app/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["content-script.js", "tesseract-core.js"],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "service_worker": "background.js"
  }
}
